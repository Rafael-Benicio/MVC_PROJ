@model Dotnet.Models.Produtos

<h1>Crie um novo produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" placeholder="Nome do produto" />
                <label asp-for="Description"  class="control-label" >Descrição</label>
                <textarea rows="4" cols="20" asp-for="Description" placeholder="Comente seu produto" class="form-control"></textarea>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

